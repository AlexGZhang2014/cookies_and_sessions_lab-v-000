<h1>Index page</h1>
<ul>
  <% if !@cart.empty? %>
    <% @cart.each do |item| %>
      <li><%= item %></li>
    <% end %>
  <% else %>
    <p>There is nothing in the cart.</p>
  <% end %>
</ul>
<%= form_tag ({controller: 'products', action: 'add', method: 'post'}) do %>
  <input name="product">
  <input type="submit" value="add to cart">
<% end %>